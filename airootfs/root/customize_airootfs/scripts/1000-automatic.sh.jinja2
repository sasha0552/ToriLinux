#!/bin/bash
set -eu

# clone repository
git clone "{{ repositories.automatic }}"

# automatic patches
pushd "automatic"
  # use specific revision
  git checkout "{{ revisions.automatic }}"

  # clone submodules
  git submodule update --init --recursive
popd

# automatic dependencies
pushd "automatic"
  # disable package caching
  export PIP_NO_CACHE_DIR=0

  # create venv
  python3 -m venv venv

  # activate venv
  source venv/bin/activate
    {% if platform == "cuda" %}
    # install nvidia-pstate if cuda
    pip3 install nvidia-pstate
    {% endif %}

    # install dependencies
    python3 launch.py --test
  deactivate

  # remove installation config
  rm config.json

  # remove installation log
  rm sdnext.log
popd
